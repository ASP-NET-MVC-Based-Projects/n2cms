@model Dinamico.Models.ContentPart

@{ Content.Define(re =>
	   {
		   re.Title = "2 Columns";
		   re.IconUrl = "{IconsUrl}/text_columns.png";
		   re.CheckBox("Separator", "Show separator");
	   });
}
@if (Content.Data.Separator ?? false)
{
	<hr />
}
<div class="columns twocolumns row">
	<div class="column span col-md-6">
		@{ Html.DroppableZone("Left").Render(); }
	</div>
	<div class="column column2 col-md-6">
		@{ Html.DroppableZone("Right").Render(); }
	</div>
</div>

<ul>
	@foreach (var item in Html.CurrentItem().Children.OfType<Dinamico.Models.ContentPart>())
	{
		<li>@item (@item.ZoneName)</li>
	}
</ul>
<ul>
	@foreach (var item in Html.CurrentItem().Children.FindParts())
	{
		<li>@item (@item.ZoneName)</li>
	}
</ul>
<ul>
	@foreach (var item in Html.CurrentItem().GetChildren())
	{
		<li>@item (@item.ZoneName)</li>
	}
</ul>